@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-login-left">
    <div class="wrap-login-left">
            <div class="row">
                <div class="col-md-12">
                    <div class="login-left-title mb-40">
                        Forgot password confirmation<span class="login-form-icon-green-circle"></span>
                    </div>
                    <div class="login-left-desc mb-50">
                        Please check your email to reset your password.
                    </div>
                </div>
                <div class="col-md-12 text-center">
                    <div class="login-form-input mt-20">
                        <a href="@Url.Action("Login", "Account", new { Area = "" })" class="btn-login-back">
                            Back to sign in
                        </a>
                    </div>
                </div>
            </div>
    </div>
</div>