@using GCSideLoading.Web.Models.AccountViewModels
@using Microsoft.AspNetCore.Identity
@using GCSideLoading.Core.EntityModel
@model RegisterViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Register";
    //Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}

<div class="container-login-left">
    <div class="wrap-login-left">
        <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="login-left-title mb-40">
                        Register<span class="login-form-icon-green-circle"></span>
                    </div>
                    <div class="login-left-desc mb-50">
                        Create a new account.
                    </div>
                </div>
                <div class="col-md-12 col-sm-12">
                    <div class="login-form-validation-summary">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12">
                    <div class="login-form-input">
                        <div class="input-group">
                            <div class="mdc-text-field mdc-text-field--outlined w-100">
                                <input class="mdc-text-field__input" type="text" data-val="true" data-val-required="Email is required." name="Email" placeholder="Enter your e-mail">
                                <div class="mdc-notched-outline mdc-notched-outline--no-label">
                                    <div class="mdc-notched-outline__leading"></div>
                                    <div class="mdc-notched-outline__notch">
                                        <label for="Email" class="mdc-floating-label">Email</label>
                                    </div>
                                    <div class="mdc-notched-outline__trailing"></div>
                                </div>
                            </div>
                        </div>
                        <div class="field-validation-valid text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12">
                    <div class="login-form-input">
                        <div class="input-group">
                            <div class="mdc-text-field mdc-text-field--outlined w-100">
                                <input class="mdc-text-field__input" type="password" data-val="true" data-val-required="Password is required." name="Password" placeholder="Your password">
                                <div class="mdc-notched-outline mdc-notched-outline--no-label">
                                    <div class="mdc-notched-outline__leading"></div>
                                    <div class="mdc-notched-outline__notch">
                                        <label for="Password" class="mdc-floating-label">Password</label>
                                    </div>
                                    <div class="mdc-notched-outline__trailing"></div>
                                </div>
                            </div>
                        </div>
                        <div class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12">
                    <div class="login-form-input">
                        <div class="input-group">
                            <div class="mdc-text-field mdc-text-field--outlined w-100">
                                <input class="mdc-text-field__input" type="password" data-val="true" data-val-required="Confirm Password is required." name="ConfirmPassword" placeholder="Enter your confirm password">
                                <div class="mdc-notched-outline mdc-notched-outline--no-label">
                                    <div class="mdc-notched-outline__leading"></div>
                                    <div class="mdc-notched-outline__notch">
                                        <label for="Password" class="mdc-floating-label">Confirm Password</label>
                                    </div>
                                    <div class="mdc-notched-outline__trailing"></div>
                                </div>
                            </div>
                        </div>
                        <div class="field-validation-valid text-danger" data-valmsg-for="ConfirmPassword" data-valmsg-replace="true"></div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12">
                    <input asp-for="RoleName" type="hidden">
                    <div class="login-form-input mt-20">
                        <button type="submit" class="btn btn-green">
                            Register
                        </button>
                        <a href="@Url.Action("Login", "Account", new { Area = "" })" class="btn-login-back">
                            Back to sign in
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>